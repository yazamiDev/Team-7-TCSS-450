<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    android:background="?attr/backgroundColor"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="edu.uw.team7project.ui.home.HomeFragment"
        android:label="Home"
        android:background="?attr/backgroundColor"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_messages"
        android:name="edu.uw.team7project.ui.messages.MessagesFragment"
        android:background="?attr/backgroundColor"
        android:label="Messages"
        tools:layout="@layout/fragment_messages" />

    <fragment
        android:id="@+id/navigation_contacts"
        android:name="edu.uw.team7project.ui.contacts.ContactsFragment"
        android:background="?attr/backgroundColor"
        android:label="Contacts"
        tools:layout="@layout/fragment_contacts" />

    <fragment
        android:id="@+id/navigation_weather"
        android:name="edu.uw.team7project.ui.weather.WeatherFragment"
        android:background="?attr/backgroundColor"
        android:label="Weather"
        tools:layout="@layout/fragment_weather" />

</navigation>